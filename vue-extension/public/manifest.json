{
  "name": "별담",
  "description": "북마크와 RSS 피드를 관리하는 크롬 익스텐션",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "byeoldam16x16.png",
      "48": "byeoldam48x48.png",
      "128": "byeoldam128x128.png"
    }
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://byeoldam.store"
  },
  "icons": {
    "16": "byeoldam16x16.png",
    "48": "byeoldam48x48.png",
    "128": "byeoldam128x128.png"
  }
}
